{% if quiz %}
  <form action="/quizzes/{{quiz.id}}" method="POST">
{% else %}
  <form action="/quizzes" method="POST">
{% endif %}
    <div>
      
      {% if quiz %}
      <label for="name">Name: </label>
      <input id="name" type="text" name="name" value="{{quiz.name}}" />
      <label for="weight">Weight: </label>
      <input id="weight" type="number" max="100" min="0" name="weight" value="{{quiz.weight}}" />
      {% else %}
      <label for="name">Name: </label>
      <input id="name" type="text" name="name"/>
      <label for="weight">Weight: </label>
      <input id="weight" type="number" max="100" min="0" name="weight"/>
      {% endif %}
    </div>
    <input type="submit" value="Save Quiz" />
  </form>